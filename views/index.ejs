        <br>
        <input type="text" name="faculty" id ="faculty">
        <br>
        <br>
        <label>GPA: </label>
        <br>
        <input type ="text" name="gpa" id="gpa">
        <br>
        <br>
        <button> Submit</button>

    </form>


    <!-- for result display -->
    <h1>User Data</h1>

  
        <ul>
            <% studentResults.forEach(user => { %>
